{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "bundler",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "isolatedModules": true,
      "types": ["node"],
      "outDir": "../dist/scripts",
      "allowJs": true
    },
    "include": ["./**/*"],
    "exclude": ["node_modules"]
  }